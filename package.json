{
  "name": "POS",
  "version": "0.1.0",
  "description": "Point of Sale desktop application",
  "author": "Gzim",
  "private": true,
  "main": "start.js",
  "build": {
    "appId": "com.hostingdomain.pos",
    "productName": "PowerTech POS",
    "asar": true,
    "asarUnpack": [
      "assets/**/*"
    ],
    "files": [
      "**/*",
      "!node_modules/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/images/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PowerTech POS"
    }
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@seald-io/nedb": "^4.0.4",
    "async": "^3.2.6",
    "body-parser": "^1.20.3",
    "btoa": "^1.2.1",
    "electron-context-menu": "^4.1.1",
    "electron-store": "^8.2.0",
    "electron-winstaller": "^5.4.0",
    "express": "^4.21.2",
    "express-fileupload": "^1.5.2",
    "html2canvas": "^1.4.1",
    "https": "^1.0.0",
    "is-port-reachable": "^4.0.0",
    "jquery": "^3.7.1",
    "jsbarcode": "^3.12.1",
    "jspdf": "^3.0.4",
    "macaddress": "^0.5.3",
    "moment": "^2.30.1",
    "multer": "^2.0.2",
    "nodemon": "^3.1.11",
    "path": "^0.12.7",
    "print-js": "^1.6.0",
    "socket.io": "^4.8.1",
    "sweetalert2": "^11.26.3",
    "xmlhttprequest": "^1.8.0"
  },
  "scripts": {
    "electron": "cross-env NODE_ENV=dev nodemon --exec \"\"electron .\"\"",
    "electron-build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:win:msi": "electron-builder --win msi --x64",
    "package-win": "electron-packager . POS --overwrite --asar=false --platform=win32 --arch=x64 --icon=assets/images/icon.ico --prune=true --out=release-builds --version-string.ProductName=\"POS\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^35.7.5",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "nodemon": "^3.1.11"
  }
}
